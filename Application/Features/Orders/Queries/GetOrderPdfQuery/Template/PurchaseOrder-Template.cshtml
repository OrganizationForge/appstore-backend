@model OrderViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orden de Compra</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        h1, h2, h3 {
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        tfoot {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>Orden de Compra</h1>
    <p><strong>Orden N°:</strong> @Model.OrderId</p>
    <p><strong>Fecha:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy")</p>

    <h2>Vendedor</h2>
    <p><strong>Empresa:</strong> @Model.Seller.CompanyName</p>
    <p><strong>Contacto:</strong> @Model.Seller.ContactName</p>

    <h2>Destinatario</h2>
    <p><strong>Empresa:</strong> @Model.Recipient.CompanyName</p>
    <p><strong>Contacto:</strong> @Model.Recipient.ContactName</p>

    <h2>Items de la Orden</h2>
    <table>
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@(item.Quantity * item.Price).ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total: @Model.Total.ToString("C")</h3>
</body>
</html>
